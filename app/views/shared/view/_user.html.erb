<div class="table-name">
    <h1>登録者一覧</h1>
    <% if @users.empty? %>
        <p>登録者が存在していません。</p>
    <% else %>
    <p>登録者合計: <%= @users.length %></p>
    <div class="table-wrapper">
        <table>
            <div class="tr">
                <div class="th">ID</div>
                <div class="th">IMAGE</div>
                <div class="th">NAME</div>
            </div>
            <% @users.each do |user| %>
                <div class="tr">
                    <div class="td"><%= user.id %></div>
                    <div class="td">
                        <%= image_tag user.image.to_s, class: "table-image" %>
                    </div>
                    <div class="td"><%= user.name %></div>
                </div>
            <% end %>
        </table>
    </div>
    <% end %>
    <div class="btn" id="submit-btn"><a href="/admin">管理画面トップへ</a></div>
</div>