<main>
  <div class="contents" id="login-con">
      <h1>パスワード再設定フォーム</h1>
        <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |form| %>
      	<div class="txt_field">
            <label for="password">新しいパスワード</label>
                <%= form.password_field :password, placeholder: "新しいパスワードを入力してください", required: true %>
            <label for="password">新しいパスワード（確認用）</label>
      		      <%= form.password_field :password_confirmation, placeholder: "新しいパスワードを入力してください", required: true %>
        <%= hidden_field_tag :email, @user.email %>
        <%= form.submit '更新する', class:"btn", id:'submit-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</main>