        <button type="button" class="buttons" id="hyakuwariRandomButton">シャッフル</button>

        <div class="hyakuwari_copy">
            <div class="gyou">
                <div class="sign" class="hyakuwari_base">÷</div>
                <div class="hyakuwari_column"></div>
                <div class="hyakuwari_column"></div>
                <div class="hyakuwari_column"></div>
