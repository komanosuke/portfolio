        <%# end %>
        <p id="meaning"></p>
        <h2 id="count"></h2>
        <button type="button" class="voiceButton">♫ 発音</button>
        <input id="input_answer" type="text" value="">
        <div class="wrap">
            <button type="button" class="quiz_button"></button>
            <button type="button" class="quiz_button"></button>
            <button type="button" class="quiz_button"></button>
        </div>
        <button type="button" id="nextButton">次へ</button>
